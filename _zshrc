alias mci='mvn clean install'
alias m='mvn'
# git aliases, some override zsh plugin defaults
alias gl='git log --decorate --oneline --graph --all -20'
alias gls='git ls-files --exclude-standard'
alias gh='git help'
alias gpr='git pull --rebase'
alias gp='git pull'
alias gpu='git push'
alias gf='git fetch'
alias gs='git status -s'
alias ga='git add -v'
alias gr='git reset'
alias gds='git diff --staged'
alias gd='git diff'
alias ggpull='git fetch origin && git pull --rebase origin $(current_branch)'

# use vim as default editor (called when typing Ctrl-x Ctrl-e
export EDITOR=vim
