#!/bin/bash

sudo -k
base_cmd="sudo -n ddcutil --sn 011NTPCEH704"

# usage
#
# ${0} brightness + 5
# ${0} brightness - 10

brightness(){
    ${base_cmd} setvcp 10 ${@}
}

case "${1:-}" in
    brightness)
        brightness ${2:-} ${3:-}
        ;;
    **)
        echo "unknown command '${cmd}'"
        ;;
esac
