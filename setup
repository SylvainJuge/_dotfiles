#!/bin/sh

# get required packages
echo "====[ Installing Required Packages ]==="
sudo apt-get install --yes zsh bash git vim-gtk vim

echo "====[ Change default shell to ZSH ]==="
chsh -s /bin/zsh

echo "====[ Create Symbolic Links ]==="

dotFilesDir=$(dirname $0)

ln -sfv $HOME/.vimrc      $dotFilesDir/_vim/_vim
ln -sfv $HOME/.vim        $dotFilesDir/_vim/_vimrc
ln -sfv $HOME/.oh-my-zsh  $dotFilesDir/_oh-my-zsh
ln -sfv $HOME/.zshrc      $dotFilesDir/_zshrc

